            color: #00ffcc;
        }
        
        #gameCanvas {
            background: #000;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 168, 255, 0.5);
            border: 2px solid #00a8ff;
            width: 100%;
            height: 50vh;
            max-height: 400px;
        }
        
        .controls {
            display: flex;
            gap: 10px;
            margin-top: 5px;
            width: 100%;
            justify-content: center;
        }
        
        button {
            background: linear-gradient(to bottom, #00a8ff, #0077b6);
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 50px;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            flex: 1;
            max-width: 120px;
        }
        
        button:active {
            transform: translateY(2px);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
        }
        
        #startBtn {
            background: linear-gradient(to bottom, #00cc66, #00994d);
        }
        
        #pauseBtn {
            background: linear-gradient(to bottom, #ffaa00, #cc8800);
        }
        
        #resetBtn {
            background: linear-gradient(to bottom, #ff4444, #cc0000);
        }
        
        .mobile-controls {
            display: flex;
            justify-content: space-between;
            width: 100%;
            margin-top: 10px;
            gap: 10px;
        }
        
        .direction-controls {
            display: flex;
            gap: 10px;
        }
        
        .mobile-btn {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background: rgba(0, 168, 255, 0.7);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            font-weight: bold;
            color: white;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            transition: all 0.2s;
        }
        
        .mobile-btn:active {
            background: rgba(0, 168, 255, 1);
            transform: scale(0.95);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
        }
        
        .shoot-control {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: rgba(255, 0, 0, 0.7);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            font-weight: bold;
            color: white;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            transition: all 0.2s;
        }
        
        .shoot-control:active {
            background: rgba(255, 0, 0, 1);
            transform: scale(0.95);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
        }
        
        .instructions {
            background: rgba(0, 0, 50, 0.5);
            padding: 15px;
            border-radius: 10px;
            margin-top: 10px;
            width: 100%;
            border: 1px solid #00a8ff;
            font-size: 0.9rem;
            overflow-y: auto;
            max-height: 20vh;
        }
        
        .instructions h2 {
            color: #00ffcc;
            margin-bottom: 8px;
            text-align: center;
            font-size: 1.2rem;
        }
        
        .instructions ul {
            list-style-type: none;
            padding-left: 5px;
        }
        
        .instructions li {
            margin-bottom: 6px;
            padding-left: 15px;
            position: relative;
        }
        
        .instructions li:before {
            content: "▶";
