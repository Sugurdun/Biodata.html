<body>
    <header>
        <h1>SPACE DEFENDER</h1>
        <p class="subtitle">Lindungi Bumi dari serangan alien!</p>
    </header>
    
    <div class="game-container">
        <div class="game-info">
            <div class="info-box">
                <div class="info-label">SCORE</div>
                <div id="score" class="info-value">0</div>
            </div>
            <div class="info-box">
                <div class="info-label">LIVES</div>
                <div id="lives" class="info-value">3</div>
            </div>
            <div class="info-box">
                <div class="info-label">LEVEL</div>
                <div id="level" class="info-value">1</div>
            </div>
        </div>
        
        <canvas id="gameCanvas"></canvas>
        
        <div class="controls">
            <button id="startBtn">Mulai</button>
            <button id="pauseBtn">Jeda</button>
            <button id="resetBtn">Reset</button>
        </div>
        
        <div class="mobile-controls">
            <div class="direction-controls">
                <div class="mobile-btn" id="leftBtn">←</div>
                <div class="mobile-btn" id="rightBtn">→</div>
            </div>
            <div class="shoot-control" id="shootBtn">⚡</div>
        </div>
        
        <div class="instructions">
            <h2>Cara Bermain</h2>
            <ul>
                <li>Gunakan tombol panah untuk menggerakkan pesawat</li>
                <li>Sentuh tombol ⚡ untuk menembak musuh</li>
                <li>Hancurkan pesawat musuh untuk mendapatkan poin</li>
                <li>Hindari tabrakan dengan pesawat musuh</li>
                <li>Tembak UFO untuk mendapatkan bonus</li>
            </ul>
        </div>
    </div>
    
    <footer>
        <p>© 2023 Space Defender - Mobile Version</p>
    </footer>

    <script>
        // Inisialisasi canvas untuk mobile
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        
        // Atur ukuran canvas berdasarkan ukuran layar
        function resizeCanvas() {
            const container = canvas.parentElement;
            const containerWidth = container.clientWidth;
            const containerHeight = window.innerHeight * 0.5; // 50% dari tinggi viewport
            
            canvas.width = containerWidth;
            canvas.height = containerHeight;
        }
        
        // Panggil saat pertama kali dan saat ukuran window berubah
        window.addEventListener('load', resizeCanvas);
        window.addEventListener('resize', resizeCanvas);
        
        // Elemen UI
        const scoreElement = document.getElementById('score');
        const livesElement = document.getElementById('lives');
        const levelElement = document.getElementById('level');
        const startBtn = document.getElementById('startBtn');
        const pauseBtn = document.getElementById('pauseBtn');
        const resetBtn = document.getElementById('resetBtn');
        const leftBtn = document.getElementById('leftBtn');
        const rightBtn = document.getElementById('rightBtn');
        const shootBtn = document.getElementById('shootBtn');
        
        // Variabel game
        let score = 0;
        let lives = 3;
        let level = 1;
        let gameRunning = false;
        let gamePaused = false;
        let animationId;
        
        // Player
        const player = {
            x: 0,
            y: 0,
            width: 0,
            height: 0,
            speed: 7,
            color: '#00a8ff',
            isMovingLeft: false,
            isMovingRight: false
        };
        
        // Inisialisasi ukuran player berdasarkan canvas
        function initPlayer() {
            player.width = canvas.width * 0.1; // 10% dari lebar canvas
            player.height = player.width * 0.8;
            player.x = canvas.width / 2 - player.width / 2;
            player.y = canvas.height - player.height - 10;
        }
        
        // Bullets
        const bullets = [];
        const bulletSpeed = 8;
        
        // Enemies
        const enemies = [];
        let enemySpeed = 2;
        let enemySpawnRate = 60; // frames
        
        // Special enemies (UFOs)
        const ufos = [];
        let ufoSpawnRate = 300; // frames
        
        // Particles for explosions
        const particles = [];
        
        // Event listeners untuk kontrol sentuh
        leftBtn.addEventListener('touchstart', (e) => {
            e.preventDefault();
            player.isMovingLeft = true;
        });
        
        leftBtn.addEventListener('touchend', (e) => {
            e.preventDefault();
            player.isMovingLeft = false;
        });
        
        rightBtn.addEventListener('touchstart', (e) => {
            e.preventDefault();
            player.isMovingRight = true;
        });
        
        rightBtn.addEventListener('touchend', (e) => {
            e.preventDefault();
            player.isMovingRight = false;
        });
        
        shootBtn.addEventListener('touchstart', (e) => {
            e.preventDefault();
            if (gameRunning && !gamePaused) shoot();
        });
        
        // Juga tambahkan event listeners untuk mouse (untuk pengujian di desktop)
        leftBtn.addEventListener('mousedown', () => player.isMovingLeft = true);
        leftBtn.addEventListener('mouseup', () => player.isMovingLeft = false);
        leftBtn.addEventListener('mouseleave', () => player.isMovingLeft = false);
        
        rightBtn.addEventListener('mousedown', () => player.isMovingRight = true);
        rightBtn.addEventListener('mouseup', () => player.isMovingRight = false);
        rightBtn.addEventListener('mouseleave', () => player.isMovingRight = false);
        
        shootBtn.addEventListener('mousedown', () => {
            if (gameRunning && !gamePaused) shoot();
        });
        
        // Event listeners untuk tombol
        startBtn.addEventListener('click', startGame);
        pauseBtn.addEventListener('click', togglePause);
        resetBtn.addEventListener('click', resetGame);
        
        // Event listener untuk swipe (opsional)
        let touchStartX = 0;
        canvas.addEventListener('touchstart', (e) => {
            touchStartX = e.touches[0].clientX;
        });
        
        canvas.addEventListener('touchmove', (e) => {
            if (!gameRunning || gamePaused) return;
            
            const touchX = e.touches[0].clientX;
            const diff = touchX - touchStartX;
            
            if (Math.abs(diff) > 10) {
                if (diff > 0) {
                    // Swipe kanan
                    player.x += player.speed;
                    if (player.x > canvas.width - player.width) {
                        player.x = canvas.width - player.width;
                    }
                } else {
                    // Swipe kiri
                    player.x -= player.speed;
                    if (player.x < 0) {
                        player.x = 0;
                    }
                }
                touchStartX = touchX;
            }
            
            e.preventDefault();
        });
        
        // Tap untuk menembak
        canvas.addEventListener('touchend', (e) => {
            if (!gameRunning || gamePaused) return;
            
            // Cek jika tap singkat (bukan swipe panjang)
            const touch = e.changedTouches[0];
            const tapTime = e.timeStamp;
            const diffX = Math.abs(touch.clientX - touchStartX);
            
            if (diffX < 10) {
                shoot();
            }
        });
        
        // Fungsi untuk memulai game
        function startGame() {
            if (!gameRunning) {
                gameRunning = true;
                gamePaused = false;
                score = 0;
                lives = 3;
                level = 1;
                enemies.length = 0;
                bullets.length = 0;
                ufos.length = 0;
                initPlayer();
                updateUI();
                gameLoop();
            } else if (gamePaused) {
                gamePaused = false;
                gameLoop();
            }
        }
        
        // Fungsi untuk menjeda/melanjutkan game
        function togglePause() {
            if (gameRunning) {
                gamePaused = !gamePaused;
                if (!gamePaused) {
                    gameLoop();
                }
            }
        }
        
        // Fungsi untuk mereset game
        function resetGame() {
            gameRunning = false;
            gamePaused = false;
            score = 0;
            lives = 3;
            level = 1;
            enemies.length = 0;
            bullets.length = 0;
            ufos.length = 0;
            particles.length = 0;
            updateUI();
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            cancelAnimationFrame(animationId);
        }
        
        // Fungsi untuk menembak
        function shoot() {
            bullets.push({
                x: player.x + player.width / 2 - 2,
                y: player.y,
                width: 4,
                height: 15,
                color: '#00ffcc'
            });
        }
        
        // Fungsi untuk membuat musuh
        function spawnEnemy() {
            const size = Math.random() * 20 + 20;
            enemies.push({
                x: Math.random() * (canvas.width - size),
                y: -size,
                width: size,
                height: size,
                color: `hsl(${Math.random() * 60}, 100%, 50%)`, // Warna merah-oranye
                speed: enemySpeed + Math.random() * 1
            });
        }
        
        // Fungsi untuk membuat UFO (musuh spesial)
        function spawnUFO() {
            ufos.push({
                x: Math.random() * (canvas.width - 60),
                y: -40,
                width: 60,
                height: 30,
                color: '#ff00ff',
                speed: enemySpeed * 0.7,
                points: 50
            });
        }
        
        // Fungsi untuk membuat partikel ledakan
        function createExplosion(x, y, color) {
            for (let i = 0; i < 15; i++) {
                particles.push({
                    x: x,
                    y: y,
                    size: Math.random() * 5 + 2,
                    speedX: (Math.random() - 0.5) * 5,
                    speedY: (Math.random() - 0.5) * 5,
                    color: color,
                    life: 30
                });
            }
        }
        
        // Fungsi update UI
        function updateUI() {
            scoreElement.textContent = score;
            livesElement.textContent = lives;
            levelElement.textContent = level;
        }
        
        // Fungsi untuk mendeteksi tabrakan
        function isColliding(rect1, rect2) {
            return rect1.x < rect2.x + rect2.width &&
                   rect1.x + rect1.width > rect2.x &&
                   rect1.y < rect2.y + rect2.height &&
                   rect1.y + rect1.height > rect2.y;
        }
        
        // Game loop utama
        function gameLoop() {
            if (gamePaused) return;
            
            // Clear canvas
            ctx.fillStyle = 'rgba(0, 0, 0, 0.2)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // Gambar bintang latar belakang
            drawStars();
            
            // Update player position
            if (player.isMovingLeft && player.x > 0) {
                player.x -= player.speed;
            }
            if (player.isMovingRight && player.x < canvas.width - player.width) {
                player.x += player.speed;
            }
            
            // Gambar player
            drawPlayer();
            
            // Update dan gambar bullets
            updateBullets();
            
            // Spawn enemies
            if (Math.random() < 1 / enemySpawnRate) {
                spawnEnemy();
            }
            
            // Spawn UFO
            if (Math.random() < 1 / ufoSpawnRate) {
                spawnUFO();
            }
            
            // Update dan gambar enemies
            updateEnemies();
            
            // Update dan gambar UFOs
            updateUFOs();
            
            // Update dan gambar particles
            updateParticles();
            
            // Check level up
            if (score >= level * 100) {
                level++;
                enemySpeed += 0.5;
                enemySpawnRate = Math.max(20, enemySpawnRate - 5);
                updateUI();
            }
            
            // Check game over
            if (lives <= 0) {
                gameOver();
                return;
            }
            
            animationId = requestAnimationFrame(gameLoop);
        }
        
        // Fungsi untuk menggambar bintang
        function drawStars() {
            ctx.fillStyle = 'white';
            for (let i = 0; i < 50; i++) {
                const x = Math.random() * canvas.width;
                const y = Math.random() * canvas.height;
                const size = Math.random() * 2;
                ctx.fillRect(x, y, size, size);
            }
        }
        
        // Fungsi untuk menggambar player
        function drawPlayer() {
            ctx.fillStyle = player.color;
            // Body pesawat
            ctx.beginPath();
            ctx.moveTo(player.x + player.width / 2, player.y);
            ctx.lineTo(player.x + player.width, player.y + player.height);
            ctx.lineTo(player.x, player.y + player.height);
            ctx.closePath();
            ctx.fill();
            
            // Sayap
            ctx.fillRect(player.x + player.width / 2 - 10, player.y + player.height, 20, 10);
        }
        
        // Fungsi untuk update bullets
        function updateBullets() {
            for (let i = bullets.length - 1; i >= 0; i--) {
                const bullet = bullets[i];
                bullet.y -= bulletSpeed;
                
                // Gambar bullet
                ctx.fillStyle = bullet.color;
                ctx.fillRect(bullet.x, bullet.y, bullet.width, bullet.height);
                
                // Hapus bullet jika keluar layar
                if (bullet.y < 0) {
                    bullets.splice(i, 1);
                }
            }
        }
        
        // Fungsi untuk update enemies
        function updateEnemies() {
            for (let i = enemies.length - 1; i >= 0; i--) {
                const enemy = enemies[i];
                enemy.y += enemy.speed;
                
                // Gambar enemy
                ctx.fillStyle = enemy.color;
                ctx.beginPath();
                ctx.arc(enemy.x + enemy.width / 2, enemy.y + enemy.height / 2, enemy.width / 2, 0, Math.PI * 2);
                ctx.fill();
                
                // Check collision dengan bullets
                for (let j = bullets.length - 1; j >= 0; j--) {
                    if (isColliding(bullets[j], enemy)) {
                        createExplosion(enemy.x + enemy.width / 2, enemy.y + enemy.height / 2, enemy.color);
                        score += 10;
                        enemies.splice(i, 1);
                        bullets.splice(j, 1);
                        updateUI();
                        break;
                    }
                }
                
                // Check collision dengan player
                if (isColliding(player, enemy)) {
                    createExplosion(enemy.x + enemy.width / 2, enemy.y + enemy.height / 2, enemy.color);
                    lives--;
                    enemies.splice(i, 1);
                    updateUI();
                }
                
                // Hapus enemy jika keluar layar
                if (enemy.y > canvas.height) {
                    enemies.splice(i, 1);
                }
            }
        }
        
        // Fungsi untuk update UFOs
        function updateUFOs() {
            for (let i = ufos.length - 1; i >= 0; i--) {
                const ufo = ufos[i];
                ufo.y += ufo.speed;
                
                // Gambar UFO
                ctx.fillStyle = ufo.color;
                ctx.beginPath();
                ctx.ellipse(ufo.x + ufo.width / 2, ufo.y + ufo.height / 2, ufo.width / 2, ufo.height / 2, 0, 0, Math.PI * 2);
                ctx.fill();
                
                // Gambar kubah UFO
                ctx.fillStyle = '#ffff00';
                ctx.beginPath();
                ctx.arc(ufo.x + ufo.width / 2, ufo.y + ufo.height / 2 - 5, ufo.width / 3, 0, Math.PI);
                ctx.fill();
                
                // Check collision dengan bullets
                for (let j = bullets.length - 1; j >= 0; j--) {
                    if (isColliding(bullets[j], ufo)) {
                        createExplosion(ufo.x + ufo.width / 2, ufo.y + ufo.height / 2, ufo.color);
                        score += ufo.points;
                        ufos.splice(i, 1);
                        bullets.splice(j, 1);
                        updateUI();
                        break;
                    }
                }
                
                // Hapus UFO jika keluar layar
                if (ufo.y > canvas.height) {
                    ufos.splice(i, 1);
                }
            }
        }
        
        // Fungsi untuk update particles
        function updateParticles() {
            for (let i = particles.length - 1; i >= 0; i--) {
                const particle = particles[i];
                particle.x += particle.speedX;
                particle.y += particle.speedY;
                particle.life--;
                
                // Gambar particle
                ctx.fillStyle = particle.color;
                ctx.globalAlpha = particle.life / 30;
                ctx.beginPath();
                ctx.arc(particle.x, particle.y, particle.size, 0, Math.PI * 2);
                ctx.fill();
                
                // Hapus particle jika sudah habis umurnya
                if (particle.life <= 0) {
                    particles.splice(i, 1);
                }
            }
            ctx.globalAlpha = 1;
        }
        
        // Fungsi game over
        function gameOver() {
            gameRunning = false;
            ctx.fillStyle = 'rgba(0, 0, 0, 0.7)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            ctx.fillStyle = '#ff4444';
            ctx.font = 'bold 36px Arial';
            ctx.textAlign = 'center';
            ctx.fillText('GAME OVER', canvas.width / 2, canvas.height / 2 - 30);
            
            ctx.fillStyle = 'white';
            ctx.font = '20px Arial';
            ctx.fillText(`Skor Akhir: ${score}`, canvas.width / 2, canvas.height / 2);
            
            ctx.font = '16px Arial';
            ctx.fillText('Sentuh "Mulai" untuk bermain lagi', canvas.width / 2, canvas.height / 2 + 30);
        }
        
        // Inisialisasi
        initPlayer();
        updateUI();
    </script>
</body>
</html>
